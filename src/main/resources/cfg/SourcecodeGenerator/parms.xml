<config>
   <id>
      <name>Source code generator</name>
     <version-control>$Id: $</version-control>
   </id>
   
   <cli-parms>
      <cli-parm>
         <name>createsourcecode</name>
         <arg>yes|no</arg>
         <tip>Yes if source code must be generated</tip>
         <required>false</required>
         <default>false</default>
      </cli-parm>  
      <cli-parm>
         <name>sourcecodetype</name>
         <arg>java-jpa|java-jpa-dto|entity-xml</arg>
         <tip>The type of source code generated</tip>
         <required>false</required>
         <default>java-jpa</default>
      </cli-parm>  
   </cli-parms>
   
   <properties>
    
      <WORK_SOURCECODE_XMLPATH>${system/work-imvert-folder-path}/imvertor.31.sourcecode.xml</WORK_SOURCECODE_XMLPATH>
      <WORK_SOURCECODE_CODEPATH>${system/work-imvert-folder-path}/imvertor.31</WORK_SOURCECODE_CODEPATH>
 
      <IMVERTOR_SOURCECODE_ENTITY_XML_1.2_XSLPATH>MIM1.2/entity-xml.xsl</IMVERTOR_SOURCECODE_ENTITY_XML_1.2_XSLPATH>
      <IMVERTOR_SOURCECODE_JAVA_JPA_1.2_XSLPATH>MIM1.2/java-jpa.xsl</IMVERTOR_SOURCECODE_JAVA_JPA_1.2_XSLPATH>
      <IMVERTOR_SOURCECODE_JAVA_JPA_DTO_1.2_XSLPATH>MIM1.2/java-jpa-dto.xsl</IMVERTOR_SOURCECODE_JAVA_JPA_DTO_1.2_XSLPATH>
      
   </properties>
   
</config>