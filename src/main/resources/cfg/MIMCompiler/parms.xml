<config>
   <id>
      <name>MIM format compiler</name>
     <version-control>$Id: $</version-control>
   </id>
   
   <cli-parms>
      <cli-parm>
         <name>createmimformat</name>
         <arg>yes|no</arg>
         <tip>Yes if MIM format must be generated</tip>
         <required>false</required>
         <default>false</default>
      </cli-parm> 
      <cli-parm>
         <name>mimformatname</name>
         <arg>string</arg>
         <tip>The name of the MIM format file generated</tip>
         <required>false</required>
         <default>model name</default>
      </cli-parm> 
      <cli-parm>
         <name>mimformattype</name>
         <arg>xml|rdf-xml|turtle|legacy</arg>
         <tip>The type of the MIM format file generated</tip>
         <required>false</required>
         <default>xml</default>
      </cli-parm> 
      <cli-parm>
         <name>mimformatversion</name>
         <arg>v1|v2</arg>
         <tip>The version of the MIM compiler</tip>
         <required>false</required>
         <default>v2</default>
      </cli-parm> 
   </cli-parms>
   
   <properties>
   
      <WORK_MIMFORMAT_XMLPATH>${system/work-imvert-folder-path}/imvertor.27.mimformat.xml</WORK_MIMFORMAT_XMLPATH>   
      <WORK_MIMFORMAT_RDFPATH>${system/work-imvert-folder-path}/imvertor.27.mimformat.rdf</WORK_MIMFORMAT_RDFPATH>
 
      <IMVERTOR_MIMFORMAT_v1_1.0_XSLPATH>v1/MIMCompiler.xsl</IMVERTOR_MIMFORMAT_v1_1.0_XSLPATH>
      <IMVERTOR_MIMFORMAT_v1_1.0_LEGACY_XSLPATH>v1/MIMCompiler-legacy.xsl</IMVERTOR_MIMFORMAT_v1_1.0_LEGACY_XSLPATH>
      <IMVERTOR_MIMFORMAT_v1_1.0_RDF_XSLPATH>v1/MIMCompiler-RDF.xsl</IMVERTOR_MIMFORMAT_v1_1.0_RDF_XSLPATH>

      <IMVERTOR_MIMFORMAT_v2_1.1_XSLPATH>v2/MIM1.1/MIMCompiler.xsl</IMVERTOR_MIMFORMAT_v2_1.1_XSLPATH>
      <IMVERTOR_MIMFORMAT_v2_1.1_LEGACY_XSLPATH>v2/MIM1.1/MIMCompiler-legacy.xsl</IMVERTOR_MIMFORMAT_v2_1.1_LEGACY_XSLPATH>
      <IMVERTOR_MIMFORMAT_v2_1.1_RDF_XSLPATH>v2/MIM1.1/MIMCompiler-RDF.xsl</IMVERTOR_MIMFORMAT_v2_1.1_RDF_XSLPATH>
      
      <IMVERTOR_MIMFORMAT_v2_1.2_XSLPATH>v2/MIM1.2/MIMCompiler.xsl</IMVERTOR_MIMFORMAT_v2_1.2_XSLPATH>
      <IMVERTOR_MIMFORMAT_v2_1.2_LEGACY_XSLPATH>v2/MIM1.2/MIMCompiler-legacy.xsl</IMVERTOR_MIMFORMAT_v2_1.2_LEGACY_XSLPATH>
      <IMVERTOR_MIMFORMAT_v2_1.2_RDF_XSLPATH>v2/MIM1.2/MIMCompiler-RDF.xsl</IMVERTOR_MIMFORMAT_v2_1.2_RDF_XSLPATH>
      
   </properties>
   
</config>