<metamodel type="config" xmlns:xi="http://www.w3.org/2001/XInclude">
   
   <xi:include href="../../../MIM/cfg/metamodels/MIM12.xml"/>
   
   <xi:include href="../../../Imvertor/cfg/metamodels/Grouping-MIM12.xml"/>
   
   <name>Waarderingskamer SIM</name>
   
   <desc lang="en">Metamodel for Waarderingskamer information models: semantisch informatiemodel</desc>
   
   <profiles>
      <profile lang="nl"> 
         <id>WKSIMNL</id>
         <release>1.2</release>
         <desc>WKSIM Grouping NL</desc> 
         <profile-name>WKMIM</profile-name>
      </profile>
      <profile lang="en"> <!-- ACTUALLY, there is no english variant -->
         <id>WKSIMEN</id>
         <release>1.2</release>
         <desc>WKSIM Grouping EN</desc>
         <profile-name>WKMIM</profile-name>
      </profile>
   </profiles>
   
   <naming>
      <package>
         <format>AsIs</format>
      </package>
      <class>
         <format>AsIs</format>
      </class>
      <property>
         <format>AsIs</format>
      </property>
      <tv>
         <format>Upperstart</format> <!-- first character must be upper case. -->
      </tv>
   </naming>
   
   <features>
      <feature name="role-based">false</feature>
      <feature name="allow-multiple-supertypes">false</feature>
      <feature name="allow-scalar-in-union">true</feature>
   </features>
   
</metamodel>
