<xmlschema-rules type="config" xmlns:xi="http://www.w3.org/2001/XInclude">
    
    <xi:include href="../../../Geonovum/cfg/schemarules/XML-ISO19136.xml"/>
    
    <name>IHW ISO19136</name>
    
    <!-- 
        IHW specific rules 
    -->
    <!-- specify if strings must be non-empty -->
    <parameter name="strings-nonempty">false</parameter>
    
    <!-- specify if the schema location must be absolute or relative. When absolute, XML schema location must be specified as a tagged value. -->
    <parameter name="xml-schemalocation-approach">relative</parameter>
    
    <!-- specify if version or release or none must be inserted into the XSD namespaces -->
    <parameter name="namespace-composition">version</parameter>
    
    <!-- specify if version or modelversion or release should occur in the schema folder path -->
    <parameter name="release-folder-name">modelversion</parameter>
    
    <!-- specify the minOccurs/maxOccurs when needed ("default") or "always" -->
    <parameter name="specify-xsd-occurrence">always</parameter><!-- only applies to ISO19136 -->
    
</xmlschema-rules>
