<xmlschema-rules type="config" xmlns:xi="http://www.w3.org/2001/XInclude">

    <xi:include href="../../../Geonovum/cfg/schemarules/XML-ISO19136.xml"/>
    
    <name>Kadaster XML ISO19136</name>
    
    <desc lang="en">Rules for processing Kadaster NEN3610 models to ISO 19136 (GML) XML schemas</desc>
    <desc lang="nl">Regels voor het verwerken van Kadaster NEN3610 modellen tot ISO 19136 (GML) XML schema's</desc>
     
    <!-- 
        Kadaster specific rules 
    -->
    <!-- specify if strings must be non-empty -->
    <parameter name="xml-schema-variant">IS019136</parameter>
 
    <!-- specify if strings must be non-empty -->
    <parameter name="strings-nonempty">false</parameter>
    
    <!-- specify if version or release or none must be inserted into the XSD namespaces -->
    <parameter name="namespace-composition">release</parameter><!-- only applies to ISO19136 -->
    
    <!-- specify the minOccurs/maxOccurs when needed ("default") or "always" -->
    <parameter name="specify-xsd-occurrence">default</parameter><!-- only applies to ISO19136 -->
    
    <!-- specify if version or modelversion or release should occur in the schema folder path -->
    <parameter name="release-folder-name">release</parameter>

</xmlschema-rules>
